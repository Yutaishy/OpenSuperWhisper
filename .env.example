# OpenSuperWhisper Docker Environment Configuration
# Copy this file to .env and customize as needed

# ==========================================
# Application Settings
# ==========================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info
DEBUG=false

# ==========================================
# API Configuration
# ==========================================
API_KEY=
ALLOWED_ORIGINS=*
MAX_FILE_SIZE=100M
REQUEST_TIMEOUT=300

# ==========================================
# Whisper Model Settings
# ==========================================
WHISPER_MODEL=base
# Options: tiny, base, small, medium, large, large-v2, large-v3
LANGUAGE=en
# Leave empty for auto-detection

# ==========================================
# Docker Settings
# ==========================================
GITHUB_REPOSITORY=opensuperwhisper/opensuperwhisper
VERSION=latest
DOMAIN=localhost

# ==========================================
# Optional Services
# ==========================================
# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# Redis
REDIS_PASSWORD=changeme
REDIS_HOST=redis
REDIS_PORT=6379

# ==========================================
# Resource Limits
# ==========================================
MEMORY_LIMIT=2G
CPU_LIMIT=2.0

# ==========================================
# Timezone
# ==========================================
TZ=UTC

# ==========================================
# Development Settings
# ==========================================
COMPOSE_PROFILES=
# Options: with-nginx, with-redis
# Example: COMPOSE_PROFILES=with-nginx,with-redis